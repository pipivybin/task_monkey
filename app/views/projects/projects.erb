<h2>Hello <%= @user.username %>! You are working on the below projects:</h2>
<br>
<% @projects.each do |p| %>
    <h4><%= p.name %></h4>
    <% p.tasks.each do |t| %>
        <ul>
        <li><%=t.name%></li>
        <li><%=t.description%></li>
        <li><%=t.create_date%></li>
        <li><%=t.deadline%></li>
        </ul>
        <br>
    <% end %>
<% end %>

